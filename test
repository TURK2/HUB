-- รอให้เกมโหลดก่อน
if not game:IsLoaded() then
    game.Loaded:Wait()
end

task.wait(2)

-- โหลด Rayfield UI
local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

-- ลิงก์ RAW ของคีย์บน GitHub (จะต้องมีคีย์เดียว)
local KeyURL = "https://raw.githubusercontent.com/TURK2/HUB/main/key"

-- สร้างหน้าต่างเมนู
local Window = Rayfield:CreateWindow({
    Name = "HUB ภาษาไทย",
    LoadingTitle = "กำลังโหลดระบบ...",
    LoadingSubtitle = "เวอร์ชันภาษาไทยทั้งหมด",

    ConfigurationSaving = {
        Enabled = true,
        FolderName = "ThaiHUBSave",
        FileName = "Settings"
    },

    KeySystem = true,
    KeySettings = {
        Title = "ระบบคีย์ภาษาไทย",
        Subtitle = "กรุณาใส่รหัสเพื่อเข้าสู่ระบบ",
        Note = "รหัสดูได้จาก GitHub เท่านั้น",

        FileName = "ThaiKeySave",
        SaveKey = false,
        GrabKeyFromSite = true,          -- ใช้ระบบคีย์จากเว็บของ Rayfield
        Key = {KeyURL}                   -- URL ที่ Rayfield จะดึงคีย์จากเว็บ
    }
})

--------------------------------------------------------------------
--------------------------- แท็บหลัก ------------------------------
--------------------------------------------------------------------

local Main = Window:CreateTab("เมนูหลัก", 4483362458)
local Section = Main:CreateSection("ระบบควบคุมหลัก")

-- ปุ่มกด
Main:CreateButton({
    Name = "ปุ่มทดสอบ",
    Callback = function()
        Rayfield:Notify({
            Title = "สำเร็จ",
            Content = "คุณกดปุ่มแล้ว!",
            Duration = 4,
            Image = "check"
        })
    end
})

-- Toggle เปิด/ปิด
Main:CreateToggle({
    Name = "เปิด / ปิด ฟังก์ชัน",
    CurrentValue = false,
    Flag = "ToggleTest",
    Callback = function(value)
        print("สวิตช์เปลี่ยนเป็น:", value)
    end
})

-- Slider
Main:CreateSlider({
    Name = "ปรับความเร็ว",
    Range = {1, 100},
    Increment = 1,
    Suffix = " ระดับ",
    CurrentValue = 50,
    Flag = "SpeedSlider",
    Callback = function(value)
        print("ค่าความเร็ว:", value)
    end
})

-- กล่องพิมพ์ข้อความ
Main:CreateInput({
    Name = "กรอกข้อความ",
    PlaceholderText = "พิมพ์ข้อความที่นี่...",
    RemoveTextAfterFocusLost = false,
    Callback = function(text)
        print("คุณพิมพ์ว่า:", text)
    end
})

-- Dropdown เลือกตัวเลือก
Main:CreateDropdown({
    Name = "เลือกโหมด",
    Options = {"โหมด 1", "โหมด 2", "โหมด 3"},
    CurrentOption = "โหมด 1",
    Callback = function(option)
        print("เลือกโหมด:", option)
    end
})

-- Color Picker
Main:CreateColorPicker({
    Name = "เลือกสี",
    Color = Color3.fromRGB(255, 0, 0),
    Callback = function(color)
        print("คุณเลือกสี:", color)
    end
})

-- Keybind
Main:CreateKeybind({
    Name = "ปุ่มลัด",
    CurrentKeybind = "K",
    HoldToInteract = false,
    Callback = function()
        print("กดปุ่มลัดแล้ว")
    end
})

-- แจ้งเตือนแบบปุ่ม
Main:CreateButton({
    Name = "แสดงข้อความแจ้งเตือน",
    Callback = function()
        Rayfield:Notify({
            Title = "แจ้งเตือน",
            Content = "นี่คือการแจ้งเตือนจาก HUB!",
            Duration = 4,
            Image = "info"
        })
    end
})

--------------------------------------------------------------------
--------------------------- เมนูตั้งค่า ---------------------------
--------------------------------------------------------------------

local Settings = Window:CreateTab("ตั้งค่า", 4483362458)
local Section2 = Settings:CreateSection("ระบบตั้งค่า")

Settings:CreateButton({
    Name = "บันทึกค่าระบบ",
    Callback = function()
        Rayfield:SaveConfiguration()
        Rayfield:Notify({
            Title = "บันทึกสำเร็จ",
            Content = "บันทึกค่าของคุณแล้ว",
            Duration = 4
        })
    end
})

Settings:CreateButton({
    Name = "โหลดค่าที่บันทึก",
    Callback = function()
        Rayfield:LoadConfiguration()
        Rayfield:Notify({
            Title = "โหลดสำเร็จ",
            Content = "โหลดค่าที่คุณเคยตั้งไว้แล้ว",
            Duration = 4
        })
    end
})

-- ปิด UI
Settings:CreateButton({
    Name = "ปิดเมนูทั้งหมด",
    Callback = function()
        Rayfield:Destroy()
    end
})